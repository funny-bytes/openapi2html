{
  "name": "openapi2html",
  "version": "2.0.0",
  "description": "Yet another static html generator for Open API 2.0 / Swagger 2.0",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "author": "Frank Thelen",
  "license": "MIT",
  "homepage": "https://github.com/frankthelen/openapi2html#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankthelen/openapi2html.git"
  },
  "bugs": {
    "url": "https://github.com/frankthelen/openapi2html/issues"
  },
  "keywords": [
    "swagger",
    "openapi",
    "open api",
    "html",
    "documentation",
    "generator"
  ],
  "scripts": {
    "lint": "eslint src/*.js src/components/*.jsx test/**/*.js --ignore-path ./.eslintignore",
    "test": "jest --coverage test/*",
    "coveralls": "nyc report --reporter=lcovonly && cat ./coverage/lcov.info | coveralls",
    "preversion": "npm run lint && npm test",
    "dev": "npm-run-all --parallel watch:*",
    "watch:server": "nodemon -e js,html --ignore public/ --watch build build/server.js",
    "watch:jsx": "babel --watch src --out-dir build",
    "prepublishOnly": "npm run build && git push --tags",
    "build": "babel src --out-dir build"
  },
  "engines": {
    "node": ">=22.x.x"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.26.5",
    "@hapi/hapi": "^21.3.12",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "braces": "^3.0.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.37.4",
    "glob-parent": "^6.0.2",
    "html-entities": "^2.5.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "swagger-parser": "^10.0.3"
  },
  "dependencies": {
    "decamelize": "^5.0.0",
    "html-react-parser": "^5.2.2",
    "json-stringify-safe": "^5.0.1",
    "markdown-it": "^14.1.0",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "validator": "^13.12.0"
  }
}
